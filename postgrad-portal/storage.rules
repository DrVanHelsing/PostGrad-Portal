rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /requests/{requestId}/{allPaths=**} {
      // Authenticated users can read request files
      allow read: if request.auth != null;
      // Authenticated users can upload files (max 10MB)
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024;
    }

    match /documents/{allPaths=**} {
      // Authenticated users can read seeded and uploaded document files
      allow read: if request.auth != null;
      // Authenticated users can upload document files (max 10MB)
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
